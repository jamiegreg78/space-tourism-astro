---
/// This layout is primarily used for the crew page, since it reverses the order on tablet and up.
import Header from "../components/Header.astro";

export interface Props {
	title: string;
	pageHeader?: string;
	pageNumber?: number;
}

const { title, pageHeader, pageNumber } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{`${title} | Space Tourism`}</title>
	</head>
	<body>
		<Header />
		{
			pageHeader && pageNumber && (
				<h1 class="heading-5 page-header">
					<span aria-hidden="true">0{pageNumber}</span>
					{pageHeader}
				</h1>
			)
		}
		<div class="content">
			<slot name="top-content" />
			<slot name="bottom-content" />
		</div>
	</body>
</html>

<style lang="scss">
	@import "../styles/global.css";
	* {
		box-sizing: border-box;
	}

	.content {
		width: 100%;
		height: 100%;
		padding: 2rem 1.5rem 1rem 1.5rem;
		color: var(--text-secondary);
		flex-grow: 1;

		text-align: center;

		p {
			color: var(--text-secondary);
		}

		@media only screen and (min-width: 768px) {
			padding-inline: 6rem;
		}

		@media only screen and (min-width: 1100px) {
			display: flex;
			flex-direction: row;
			text-align: left;
			align-items: stretch;
			justify-content: space-between;
			gap: 8rem;

			padding: 0 10rem 8rem 10rem;
			padding-inline: 10rem;
		}
	}

	@media only screen and (min-width: 768px) {
		.content {
			display: flex;
			flex-direction: column-reverse;
			padding-bottom: 0;
		}
	}

	@media only screen and (min-width: 1100px) {
		.content {
			flex-direction: row-reverse;
			padding-bottom: 0;
			padding-right: 0;
			gap: 1rem;
		}
	}
</style>
